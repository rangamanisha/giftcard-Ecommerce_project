{
    "root": true,
    "extends": [
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "prettier/react"
    ],
    "plugins": [
        "react",
        "@babel"
    ],
    "env": {
        "browser": true,
        "es2020": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "globals": {
        "process": true
    },
    "ignorePatterns": [
        "build/*",
        "node_modules/*"
    ],
    "rules": {
        "react/prop-types": 0,
        "import/prefer-default-export": 0,
        "no-shadow": "warn",
        "no-underscore-dangle": 0,
        "react/jsx-filename-extension": 0,
        "react/jsx-props-no-spreading": 0,
        "no-case-declarations": "warn",
        "no-fallthrough": 0,
        "no-unused-vars": "warn",
        "react/no-unescaped-entities": "warn",
        "import/no-webpack-loader-syntaxz": 0,
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ]
    },
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "pragma": "React",
            "fragment": "Fragment",
            "version": "detect",
            "flowVersion": "0.53"
        },
        "propWrapperFunctions": [
            "forbidExtraProps",
            {
                "property": "freeze",
                "object": "Object"
            },
            {
                "property": "myFavoriteWrapper"
            }
        ]
    }
}